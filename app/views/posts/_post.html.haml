.postbox
  .post-info
    .post-info__name
      = post.user.name
    .post-info__date
      = post.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .post-message
    - if post.content.present?
      %p.post-message__content
        = post.content
    = image_tag post.image.url, class: 'post__image' if post.image.present?