.chat-main
  .chat-main__group-info
    .group
      .group__name
        = @group.name
      .group__assign
        Member : 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group), class: "chat-main__group-info__edit" do
      Edit

  
  .chat-main__post-list
    = render @posts

  .chat-main__post-form
    = form_with model: [@group, @post], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: 'form__contents__text', placeholder: "type a message"
        = f.label :image, class: 'form__contents__image' do
          = icon('far', 'image')
          = f.file_field :image, class:'form__contents__image__file'
      = f.submit 'Send', class: 'submit'